<style>
  .btn-search {
    color: #d32f2f;
    border: 1px solid #d32f2f;
    border-radius: 50%;

    padding: 0 1rem 0 1rem;
  }
  .btn-search:hover {
    color: black;
    background-color: #d32f2f;
  }
  .btn-search i {
    display: inline;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
  }
  .searchBar {
    margin-right: 10rem;
    width: 20rem;
  }
  
</style>
<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/"
      ><span class="material-symbols-outlined"> linked_services </span>
      GreatPark</a
    >
    &nbsp; &nbsp;&nbsp;
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings"><b>Explore</b></a>
        <a class="nav-link" href="/listings/new"><b>Villa's your Home</b></a>
        <% if (curUser && curUser.role === "user") { %>
  
    <a class="nav-link" href="/bookings"><b>My Bookings</b></a>
  
<% } %>

      </div>

      <div class="ms-auto me-5">
        <nav class="bg-body-tertiary searchBar">
          <div class="navbar-nav container-fluid ">
            <form class="d-flex" role="search" action="/listings">
              <input
                class="form-control me-2 search-inp"
                type="search"
                placeholder="Search for Villa's"
                aria-label="Search"
                name="q"
              />
              <button class="btn btn-search" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
              </button>
            </form>
          </div>
        </nav>
      </div>

      <div class="navbar-nav ms-auto">
  <% if (!curUser) { %>
    <a class="nav-link" aria-current="page" href="/signup"><b>SignUp</b></a>
    <a class="nav-link" href="/login"><b>Login</b></a>
  <% } %>

  <% if (curUser) { %>
    <h3 class="me-2">Hello, <%= curUser.username %></h3>
    <a class="nav-link" href="/logout">LogOut!</a>
  <% } %>
</div>

    </div>
  </div>
</nav>
