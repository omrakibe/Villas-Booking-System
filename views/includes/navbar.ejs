<style>
  .btn-search {
    color: #d32f2f;
    border: 1px solid #d32f2f;
    border-radius: 50%;
    padding: 0 1rem;
  }
  .btn-search:hover {
    color: black;
    background-color: #d32f2f;
  }
  .btn-search i {
    display: inline;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem;
  }
  .searchBar {
    margin-right: 10rem;
    width: 20rem;
  }
  .brand-name {
    background: linear-gradient(135deg, #eb3434, #f1848d, #6512b3);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
       <span class="material-symbols-outlined logo-icon">linked_services</span>
  <span class="brand-name">GreatPark</span>
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <!-- Left links -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings"><b>Explore</b></a>

        <% if (curUser && curUser.role === "admin") { %>
          <a class="nav-link" href="/listings/new"><b>Villa's your Home</b></a>
        <% } %>

        <% if (curUser && curUser.role !== "admin") { %>
          <a class="nav-link" href="/bookings/my"><b>My Bookings</b></a>
        <% } %>
      </div>

      <!-- Search bar -->
      <div class="ms-auto me-5">
        <form class="d-flex searchBar" role="search" action="/listings">
          <input
            class="form-control me-2 search-inp"
            type="search"
            placeholder="Search for Villas"
            aria-label="Search"
            name="q"
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>
      </div>

      <!-- Right links -->
      <div class="navbar-nav ms-auto align-items-center">
        <% if (!curUser) { %>
          <a class="nav-link" href="/signup"><b>SignUp</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
        <% } else { %>
          <span class="nav-link" style="font-size: 1.8rem;">Hello, <b><%= curUser.username %></b></span>
          <a class="nav-link" href="/logout">LogOut</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
