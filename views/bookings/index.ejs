<% layout("/layouts/boilerplate") %>

<body>
  <div class="container mt-5">
    <h2>Your Bookings</h2>

    <% if (bookings.length === 0) { %>
      <p>No bookings found.</p>
    <% } else { %>
      <div class="row">
        <% for (let booking of bookings) { %>
          <div class="card mb-3" style="width: 22rem;">
  <img src="<%= booking.listing.image.url %>" class="card-img-top" alt="Villa Image" style="height: 15rem; object-fit: cover;" />

  <div class="card-body">
    <h5 class="card-title"><%= booking.listing.title %></h5>
    <p class="card-text">
      <b>Check-in:</b> <%= booking.startDate.toDateString() %><br />
      <b>Check-out:</b> <%= booking.endDate.toDateString() %><br />
      <b>Guests:</b> <%= booking.guests %>
    </p>

    <form action="/bookings/<%= booking._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to cancel this booking?');">
      <button class="btn btn-danger">Cancel Booking</button>
    </form>
  </div>
</div>

        <% } %>
      </div>
    <% } %>
  </div>
</body>
