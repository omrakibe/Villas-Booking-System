<% layout("/layouts/boilerplate") %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listings = <%- JSON.stringify(listings) %>;
</script>

<body>
  <div class="row mt-4">
    <div class="col-8 offset-2">
      <div class="mb-5">
        <h2 id="heading2show"><u><%= listings.title %></u></h2>

        <div class="listing-card">
          <img
            src="<%= listings.image.url %>"
            class="card-img-top show-img"
            alt="listing_image"
            style="height: 45rem"
          />

          <hr />

          <div class="card-body">
          
            <br />
            <ul>
              <b style="font-size: 25px">Description:</b>
              <li><%= listings.description %></li>
              <br />

              <b style="font-size: 25px">Price:</b>
              <li>
                &#x20b9; <%= listings.price.toLocaleString("en-IN") %> per night
              </li>
              <br />

              <b style="font-size: 25px">Location:</b>
              <li><%= listings.location %></li>
              <br />

              <b style="font-size: 25px">Country:</b>
              <li><%= listings.country %></li>
            </ul>
          </div>
        </div>
        <br>
        <!-- Buttons section -->
        <div style="display: flex; gap: 1rem; margin-top: 1rem;">
          <% if (curUser && curUser.email === ADMIN_EMAIL) { %>
            <!-- Admin or Owner can edit/delete -->
            <form action="/listings/<%= listings._id %>/edit" method="GET">
              <button id="edit_btn">Edit</button>
            </form>

            <form
              action="/listings/<%= listings._id %>?_method=DELETE"
              method="POST"
            >
              <button class="element">Delete</button>
            </form>
          <% } %>

          <!-- Back to Home -->
          <form action="/listings">
            <button class="btn btn-dark">Home</button>
          </form>
        </div>
      </div>
    </div>

    <!-- MAP Section -->
    <div class="col-8 offset-2 mb-5">
      <h3>Where you'll be:</h3>
      <div id="map"></div>
    </div>

    <script src="/js/map.js"></script>

    <!-- Booking Form / Book Now Button -->
<% if (curUser && !(curUser._id.equals(listings.owner._id)) && curUser.email !== ADMIN_EMAIL) { %>
  <hr /><hr />
  <div class="col-8 offset-2 mb-5">
    <h3>Book this Villa:</h3>
   <form action="/bookings/<%= listings._id %>" method="POST">
  <div class="mb-3">
    <label for="startDate">Check-In:</label>
    <input type="date" name="startDate" required class="form-control">
  </div>
  <div class="mb-3">
    <label for="endDate">Check-Out:</label>
    <input type="date" name="endDate" required class="form-control">
  </div>
  <div class="mb-3">
    <label for="guests">Guests:</label>
    <input type="number" name="guests" min="1" value="1" required class="form-control">
  </div>
  <button type="submit" class="btn btn-success">Book Now</button>
</form>


  </div>

 <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
document.getElementById("rzp-button").onclick = async function (e) {
  e.preventDefault();

  const startDate = document.querySelector('input[name="startDate"]').value;
  const endDate = document.querySelector('input[name="endDate"]').value;
  const guests = document.querySelector('input[name="guests"]').value;
  const amount = <%= listings.price %>;

  // Create order in backend
  const response = await fetch(`/bookings/<%= listings._id %>/pay`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ amount }),
  });

  const order = await response.json();

  var options = {
    key: "<%= process.env.RAZORPAY_KEY_ID %>",
    amount: order.amount,
    currency: "INR",
    name: "GreatPark Villas",
    description: "Booking Payment",
    order_id: order.id,
    prefill: {
      name: "<%= curUser.username %>",
      email: "<%= curUser.email %>",
      contact: "<%= curUser.phone || '9999999999' %>"
    },
    notes: {
      startDate,
      endDate,
      guests
    },
    theme: { color: "#3399cc" },
    checkout: { disableOtp: true }, // disables OTP in test mode
    handler: async function (response) {
      // Confirm booking after payment
      await fetch(`/bookings/<%= listings._id %>/confirm`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          startDate,
          endDate,
          guests,
          payment_id: response.razorpay_payment_id
        })
      });
      alert("Payment successful! Booking confirmed.");
      window.location.href = "/bookings";
    }
  };

  var rzp1 = new Razorpay(options);
  rzp1.open();
};
</script>

<% } else if (!curUser) { %>
  <hr /><hr />
  <div class="col-8 offset-2 mb-5 text-center">
    <h3>Book this Villa:</h3>
    <a href="/login" class="btn btn-success w-50" style="background-color: black;">Book Now</a>
    <p class="mt-2">Please <a href="/login">login</a> to book this villa.</p>
  </div>
<% } %>



    <!-- Reviews Section -->
    <% if (curUser) { %>
      <hr /><br />
      <div class="col-8 offset-2 mb-4">
        <h3>Leave your Review:</h3>
        <form
          action="/listings/<%= listings.id %>/reviews"
          method="POST"
          novalidate
          class="needs-validation"
        >
          <div class="mb-3 mt-4">
            <fieldset class="mb-4 starability-slot">
              <legend>Rating:</legend>
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5">5 stars</label>
            </fieldset>
          </div>
          <div class="mb-3 mt-4">
            <label for="comment" class="form-label">Comment:</label>
            <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
          </div>
          <button id="submit_btn">Submit</button>
        </form>
      </div>
    <% } %>

    <% if(listings.reviews.length > 0) { %>
  <hr />
  <h3>Reviews :</h3>
  <div class="row">
    <% for (let review of listings.reviews) { %>
      <div class="card col-5 ms-5 mb-4 text-center">
        <div class="card-body mt-3 mb-4">

          <% if (review.author && review.author.username) { %>
            <h4 class="card-title mb-3">@ <u><%= review.author.username %></u></h4>
          <% } else { %>
            <h4 class="card-title mb-3 text-danger">@ [Deleted User]</h4>
          <% } %>

          <div class="d-flex justify-content-center mb-4">
  <p class="card-text starability-result" data-rating="<%= review.rating %>"></p>
</div>

          <h5>Comment: <u><b><%= review.comment %></b></u></h5>

          <% if (
                curUser &&
                (
                  (review.author && curUser._id.equals(review.author._id)) ||
                  (curUser.email === ADMIN_EMAIL)
                )
              ) { %>
            <form
              action="/listings/<%= listings.id %>/reviews/<%= review.id %>?_method=DELETE"
              method="POST"
            >
              <button class="mt-3 btn btn-danger">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
<% } %>

  </div>
</body>
