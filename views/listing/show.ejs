<% layout("/layouts/boilerplate") %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listings = <%- JSON.stringify(listings) %>;
</script>

<body>
  <div class="row mt-4">
    <div class="col-8 offset-2">
      <div class="mb-5">
        <h2 id="heading2show"><u><%= listings.title %></u></h2>

        <div class="listing-card">
          <img
            src="<%= listings.image.url %>"
            class="card-img-top show-img"
            alt="listing_image"
            style="height: 45rem"
          />

          <hr />

          <div class="card-body">
          
            <br />
            <ul>
              <b style="font-size: 25px">Description:</b>
              <li><%= listings.description %></li>
              <br />

              <b style="font-size: 25px">Price:</b>
              <li>
                &#x20b9; <%= listings.price.toLocaleString("en-IN") %> per night
              </li>
              <br />

              <b style="font-size: 25px">Location:</b>
              <li><%= listings.location %></li>
              <br />

              <b style="font-size: 25px">Country:</b>
              <li><%= listings.country %></li>
            </ul>
          </div>
        </div>
        <br>
        <!-- Buttons section -->
        <div style="display: flex; gap: 1rem; margin-top: 1rem;">
          <% if (curUser && (curUser._id.equals(listings.owner._id) || curUser.email === ADMIN_EMAIL)) { %>
            <!-- Admin or Owner can edit/delete -->
            <form action="/listings/<%= listings._id %>/edit" method="GET">
              <button id="edit_btn">Edit</button>
            </form>

            <form
              action="/listings/<%= listings._id %>?_method=DELETE"
              method="POST"
            >
              <button class="element">Delete</button>
            </form>
          <% } %>

          <!-- Back to Home -->
          <form action="/listings">
            <button class="btn btn-dark">Home</button>
          </form>
        </div>
      </div>
    </div>

    <!-- MAP Section -->
    <div class="col-8 offset-2 mb-5">
      <h3>Where you'll be:</h3>
      <div id="map"></div>
    </div>

    <script src="/js/map.js"></script>

    <!-- Booking Form (only for normal logged in users) -->
    <% if (curUser && !(curUser._id.equals(listings.owner._id)) && curUser.email !== ADMIN_EMAIL) { %>
      <hr /><hr />
      <div class="col-8 offset-2 mb-5">
        <h3>Book this Villa:</h3>
        <form action="/listings/<%= listings._id %>/bookings" method="POST">
  <div class="mb-3">
    <label for="startDate">Check-In:</label>
    <input type="date" name="startDate" required class="form-control">
  </div>
  <div class="mb-3">
    <label for="endDate">Check-Out:</label>
    <input type="date" name="endDate" required class="form-control">
  </div>
  <div class="mb-3">
    <label for="guests">Guests:</label>
    <input type="number" name="guests" min="1" value="1" required class="form-control">
  </div>
  <button type="submit" class="btn btn-success">Book Now</button>
</form>


      </div>
    <% } %>

    <!-- Reviews Section -->
    <% if (curUser) { %>
      <hr /><br />
      <div class="col-8 offset-2">
        <h3>Leave your Review:</h3>
        <form
          action="/listings/<%= listings.id %>/reviews"
          method="POST"
          novalidate
          class="needs-validation"
        >
          <div class="mb-3 mt-4">
            <fieldset class="mb-4 starability-slot">
              <legend>Rating:</legend>
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5">5 stars</label>
            </fieldset>
          </div>
          <div class="mb-3 mt-4">
            <label for="comment" class="form-label">Comment:</label>
            <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
          </div>
          <button id="submit_btn">Submit</button>
        </form>
      </div>
    <% } %>

    <% if(listings.reviews.length > 0) { %>
      <hr />
      <h3>Reviews :</h3>
      <div class="row">
        <% for (review of listings.reviews) { %>
          <div class="card col-5 ms-5 mb-4 text-center">
            <div class="card-body mt-3 mb-4">
              <h4 class="card-title mb-3">@ <u><%= review.author.username %></u></h4>
              <p class="card-text starability-result mb-3" data-rating="<%= review.rating %>"></p>
              <h5>Comment: <u><b><%= review.comment %></b></u></h5>

              <% if (curUser && curUser._id.equals(review.author._id)) {%>
                <form
                  action="/listings/<%= listings.id %>/reviews/<%= review.id %>?_method=DELETE"
                  method="POST"
                >
                  <button class="mt-3">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>
</body>
